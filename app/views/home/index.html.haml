.login-box
  .login-logo
    %a{:href => root_path, style: 'color: #E67436;'}
      %b> Kasoko TMS
  / /.login-logo
  .login-box-body
    %h3.login-box-msg Sign in
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
      = devise_error_messages!
      .form-group.has-feedback
        %label Email
        %input.form-control{:placeholder => "Email", :type => "email", :name => "user[email]"}
          %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.label :password
        %input.form-control{:placeholder => "Password", :type => "password", :name => "user[password]"}
          %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-8
          .checkbox
            - if devise_mapping.rememberable?
              .checkbox{:style => "width:150px"}
                %label
                  = f.check_box :remember_me
                  Remember me
        / /.col
        .col-xs-4
          %button.btn.btn-kasoko.btn-block.btn-flat{:type => "submit"} 
            %i.fa.fa-sign-in
            Sign In
    - if devise_mapping.recoverable?
      = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
    %br
      - if devise_mapping.registerable?
        = link_to 'Sign up', new_registration_path(resource_name), class: 'right'