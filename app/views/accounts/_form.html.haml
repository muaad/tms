= form_for @account do |f|
  .row
    .col-md-12
      - if @account.errors.any?
        #error_explanation
          %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
          %ul
            - @account.errors.full_messages.each do |msg|
              %li= msg
      .form-group
        = f.label :name
        .input-group
          .input-group-addon
            %i.fa.fa-institution
          = f.text_field :name, class: "form-control"
      .form-group
        = f.label :email
        .input-group
          .input-group-addon
            %i.fa.fa-envelope
          = f.email_field :email, class: "form-control"
      .form-group
        = f.label :phone_number
        .input-group
          .input-group-addon
            %i.fa.fa-phone
          = f.text_field :phone_number, class: "form-control"
  .row
    .col-sm-12
      %button.btn.btn-kasoko.btn-rounded{"data-original-title" => "", :title => "", :type => "submit", style: 'width: 100%;'}
        %i.fa.fa-save
        Save