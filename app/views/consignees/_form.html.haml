= form_for @consignee do |f|
  .box-body
    .row
      .col-md-12
        - if @consignee.errors.any?
          #error_explanation
            %h2= "#{pluralize(@consignee.errors.count, "error")} prohibited this consignee from being saved:"
            %ul
              - @consignee.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          = f.label :name
          .input-group
            .input-group-addon
              %i.fa.fa-user
            = f.text_field :name, class: "form-control"
        .form-group
          = f.label :phone_number
          .input-group
            .input-group-addon
              %i.fa.fa-phone
            = f.text_field :phone_number, class: "form-control"
        .form-group
          = f.label :city
          %select.form-control{name: "consignee[city_id]"}
            - City.all.each do |city|
              %option{value: city.id}
                = "#{city.name}, #{city.country}"
  .box-footer
    .actions.pull-right
      %button.btn.btn-success.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
        %i.fa.fa-save
        Save
