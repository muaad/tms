= form_for @driver, html: {class: 'kasoko-form', remote: true} do |f|
  .box-body.kasoko-body
    .row
      .col-md-12
        - if @driver.errors.any?
          #error_explanation
            %h2= "#{pluralize(@driver.errors.count, "error")} prohibited this driver from being saved:"
            %ul
              - @driver.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :name
          .input-group
            .input-group-addon
              %i.fa.fa-user
            = f.text_field :name, class: "form-control"
        .form-group
          = f.label :phone_number
          .input-group
            .input-group-addon
              %i.fa.fa-phone
            = f.text_field :phone_number, class: "form-control"
        .form-group
          = f.label :id_number
          .input-group
            .input-group-addon
              %i.fa.fa-credit-card
            = f.text_field :id_number, class: "form-control"
        .form-group
          = f.label :address
          .input-group
            .input-group-addon
              %i.fa.fa-map-marker
            = f.text_field :address, class: "form-control"
  .box-footer.kasoko-footer
    .actions.pull-right
      %button.btn.btn-kasoko.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
        %i.fa.fa-save
        Save