.login-box
  .login-logo
    %a{:href => root_path, style: 'color: #E67436;'}
      %b> Kasoko TMS
  / /.login-logo
  .login-box-body
    %h3.login-box-msg Change your password
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      %p We'll send password reset instructions.
      .form-group.has-feedback
        = f.label :password, "New password"
        = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
      .form-group.has-feedback
        = f.label :password_confirmation, "Confirm new password"
        = f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: 'form-control'
      .row
        .col-xs-12
          %button.btn.btn-kasoko.btn-block.btn-flat{:type => "submit"} 
            Change my password