= form_for @truck do |f|
  - if @truck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@truck.errors.count, "error")} prohibited this truck from being saved:"
      %ul
        - @truck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :registration_number
    = f.text_field :registration_number
  .actions
    = f.submit 'Save'
