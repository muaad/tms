							/ 		%div
							/ 			%i.fa.fa-map-marker
							/ 			= @truck.owner.address
							/ 		%div
							/ 			%i.fa.fa-map-marker
							/ 			= @truck.owner.entity_type
						.col-md-4
							.box.box-widget.widget-user-2
								.widget-user-header.bg-yellow
									.widget-user-image
										%img.img-circle{:alt => "User Avatar", :src => "/missing.jpg"}
									%h3.widget-user-username
										= @truck.driver.name
									%h5.widget-user-desc Driver
								.box-footer.no-padding
									%ul.nav.nav-stacked
										%li
											%a
												Phone number
												%span.pull-right
													= @truck.driver.phone_number
