					%br
					.row
						.col-md-3.col-sm-6.col-xs-12
							%a.info-box.no-link{href: trips_path}
								%span.info-box-icon.bg-aqua
									%i.fa.fa-money
								.info-box-content
									%span.info-box-text Income
									%span.info-box-number 1,410
						.col-md-3.col-sm-6.col-xs-12
							%a.info-box.no-link{href: trips_path}
								%span.info-box-icon.bg-green
									%i.fa.fa-money
								.info-box-content
									%span.info-box-text Expenses
									%span.info-box-number 410
						.col-md-3.col-sm-6.col-xs-12
							%a.info-box.no-link{href: trips_path}
								%span.info-box-icon.bg-yellow
									%i.fa.fa-files-o
								.info-box-content
									%span.info-box-text Balance
									%span.info-box-number 1,000
