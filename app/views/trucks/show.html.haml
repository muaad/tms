%section.content
	.row
		.col-md-12
			.box.box-info
				.box-header.with-border
					%h3.box-title
						= @truck.registration_number
					.box-tools.pull-right
						.btn-toolbar{role: "toolbar"}
							.btn-group
								.btn-group
									%button.btn.btn-box-tool.dropdown-toggle.btn-default{"data-toggle" => "dropdown"}
										%i.fa.fa-plus
										New
										%i.fa.fa-caret-down
									%ul.dropdown-menu{:role => "menu"}
										%li
											%a{:href => "#"} Trip
										%li
											%a{:href => "#"} Expense
								/ .btn-group
								/ 	%button.btn.btn-box-tool.dropdown-toggle.btn-default{"data-toggle" => "dropdown"}
								/ 		%i.fa.fa-plus
								/ 		Assign New Driver
								/ 	%ul.dropdown-menu{:role => "menu"}
								/ 		- Driver.all.each do |driver|
								/ 			%li
								/ 				%a{:href => "#"}
								/ 					= driver.name
								%a#edit-expense.btn.btn-box-tool.btn-default
									%i.fa.fa-edit
									Edit
								%a#delete-expenses.btn.btn-box-tool.btn-default{href: "#", "data-toggle" => "modal", "data-target" => "#delete_expense_modal"}
									%i.fa.fa-times
									Delete
				%br
				.box-body
					.row
						.col-md-4
							.box.box-widget.widget-user-2
								.widget-user-header.bg-yellow
									.widget-user-image
										%img.img-circle{:alt => "User Avatar", :src => "/missing.jpg"}
									%h3.widget-user-username
										= @truck.owner.name
									%h5.widget-user-desc Owner
								.box-footer.no-padding
									%ul.nav.nav-stacked
										%li
											%a
												Phone number
												%span.pull-right
													= @truck.owner.phone_number
										%li
											%a
												ID Number
												%span.pull-right
													= @truck.owner.id_number
										%li
											%a
												Address
												%span.pull-right
													= @truck.owner.address
										%li
											%a
												Type
												%span.pull-right
													= @truck.owner.entity_type
										%li
											%a
												Documents:
										%li
											-
											%ul
												%li
													%a.document-link.pull-left.badge.bg-blue{href: "/missing.jpg"}
														ID Card
							/ .box.box-success
							/ 	.box-header.with-border
							/ 		%h3.box-title
							/ 			Owner
							/ 		.box-tools.pull-right
							/ 			.btn-toolbar{role: "toolbar"}
							/ 				%a.btn.btn-box-tool{href: truck_owner_path(@truck.owner), title: "View"}
							/ 					%i.fa.fa-eye
