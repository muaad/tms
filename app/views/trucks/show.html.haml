							/ 		.box-tools.pull-right
							/ 			.btn-toolbar{role: "toolbar"}
							/ 				%a.btn.btn-box-tool{href: driver_path(@truck.driver), title: "View"}
							/ 					%i.fa.fa-eye
							/ 	.box-body
							/ 		%div
							/ 			%i.fa.fa-user
							/ 			= @truck.driver.name
							/ 		%div
							/ 			%i.fa.fa-phone
							/ 			= @truck.driver.phone_number
							/ 		%div
							/ 			%i.fa.fa-credit-card
							/ 			= @truck.driver.id_number
							/ 		%div
							/ 			%i.fa.fa-map-marker
							/ 			= @truck.driver.address
							/ 		%div
							/ 			%i.fa.fa-money
							/ 			- if !@truck.driver_salary.blank?	
