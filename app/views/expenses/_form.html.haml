= form_for @expense do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :expense_category
    = f.text_field :expense_category
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :driver
    = f.text_field :driver
  .field
    = f.label :truck
    = f.text_field :truck
  .field
    = f.label :turn_boy
    = f.text_field :turn_boy
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :lpo
    = f.text_field :lpo
  .actions
    = f.submit 'Save'
