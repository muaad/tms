%h1 Listing cities

%table
  %thead
    %tr
      %th Name
      %th Country
      %th City type
      %th
      %th
      %th

  %tbody
    - @cities.each do |city|
      %tr
        %td= city.name
        %td= city.country
        %td= city.city_type
        %td= link_to 'Show', city
        %td= link_to 'Edit', edit_city_path(city)
        %td= link_to 'Destroy', city, :method => :delete, :data => { :confirm => 'Are you sure?' }

