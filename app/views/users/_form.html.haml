= form_for @user, html: {class: 'kasoko-form'} do |f|
  .box-body.kasoko-body
    .row
      .col-md-12
        - if @user.errors.any?
          #error_explanation
            %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :name
          .input-group
            .input-group-addon
              %i.fa.fa-user
            = f.text_field :name, class: "form-control"
        .form-group
          = f.label :email
          .input-group
            .input-group-addon
              %i.fa.fa-phone
            = f.email_field :email, class: "form-control"
  .box-footer.kasoko-footer
    .actions.row
      .col-lg-6
        .checkbox
          %label
            %input{:type => "checkbox", name: "user[is_admin]"}
              Is this user admin?
      .col-lg-6
        %span.pull-right
          %button#save-payment.btn.btn-kasoko.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
            %i.fa.fa-save
            Save